<%= render "shared/second-header"%>

<%= form_with model: @room, local: true, class: 'registration-main' do |f| %>

<div class='form-wrap'>  
  <div class='form-header'>
    <h1 class='form-header-text'>
      New Room
    </h1>
  </div>
  <div class="form-group">
  
    <%= render 'shared/error_messages', model: f.object %>

    <div class='form-text-wrap'>
      <label class="form-text">WeddingDay</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :wedding_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2020,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">RoomName</label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"ルームの名前" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">RoomPath</label>
    </div>
    <%= f.text_field :room_path, class:"input-default", id:"room_path", placeholder:"ルームのパスワード" %>
  </div>
  
  <div class="login-btn">
    <%= f.submit "作成する" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
