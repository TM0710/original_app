<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規ユーザー登録
    </h1>
  </div>

  <%= render "shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :name %><br />
    </div>
      <%= f.text_field :name, class:"input-default", placeholder:"例) taro", maxlength:"40", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, class:"input-default", autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password %>
    </div>
    <%= f.password_field :password, class:"input-default", autocomplete: "off", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password_confirmation %><br />
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", autocomplete: "off", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "ユーザー登録", class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer" %>
