<%= render "shared/second-header"%>

<%= form_with model: [@room, @post], local: true, class: 'registration-main' do |f| %>

<div class='form-wrap'>  
  <div class='form-header'>
    <h1 class='form-header-text'>
      New Post
    </h1>
  </div>
  
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">写真</label>
    </div>
    <%= f.file_field :image, class:"input-default", id:'post-image' %>
  </div>

  <div class="login-btn">
  <%= button_tag(type: 'submit', class: 'btn btn-secondary login-red-btn') do %>
    Post
  <% end %>
    <%# <%= f.submit "投稿する" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
