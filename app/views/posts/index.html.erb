<div class="wrapper">
  <div class="side-bar">
    <%= render "side-bar" %>
  </div>
  <div class="side-space"></div>
  <%# スマホ表示 %>
  <div class="header-mobile">
    <%= render 'shared/header'%>
  </div>

  <div class="main-contents">
    <div class="main-header">
      <div class="main-header-upper">
        <h3 class="title">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
            <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
          </svg>
          <%= @room.name %>&emsp;<%= @room.wedding_day %>
        </h3>
        <div class="room-delete-btn">
          <% if @room.host_id == current_user.id %>
            <%= link_to 'ルーム削除', room_path(@room), data: { turbo_method: :delete }, class: "main-header-btn" %>
          <% else %>
            <%= link_to 'ルーム退出', "#", data: { turbo_method: :delete }, class: "main-header-delete-btn" %>
          <% end %>
        </div>
      </div>
      <hr>
    </div>
       
    <div class="posts">
      <%= render partial: 'post', collection: @posts %>
    </div>


    <%# 投稿ボタン %>
    <%= link_to(new_room_post_path, class: 'post-btn') do %>
      <button type="button" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
          <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
          <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg> 
        <div class="post-btn-text">Post</div>
      </button>
    <% end %>
  </div>
  <div class="footer-mobile">
    <%= render 'shared/footer'%>
  </div>
</div>