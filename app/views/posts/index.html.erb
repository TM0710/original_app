<div class="wrapper">
  <div class="side-bar">
    <%= render "side-bar" %>
  </div>
  <div class="side-space"></div>
  <%# スマホ表示 %>
  <div class="header-mobile">
    <%= render 'shared/header'%>
  </div>

  <div class="main-contents">
    <div class="main-header">
      <div class="main-header-upper">
        <div class="main-header-upper_left">
          <div class="title-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
              <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
            </svg>
          </div>
          <div class="title-text">
            <%= @room.name %>&emsp;<%= @room.wedding_day %>
          </div>
        </div>
        <div class="delete-contents" id="delete_nav">
          <div class="delete-lists">
            <div class="delete-btn hidden" id="delete_btn">
              <% if @room.host_id == current_user.id %>
                <div class="header-list">
                  Key：<%= @room.room_key %>
                </div>
                <div class="header-list">
                  <%= link_to 'ルーム削除', room_path(@room), data: { turbo_method: :delete, turbo_confirm: "ルーム削除してよろしいですか？"}, class: "link-btn-header" %>
                </div>
              <% else %>
                <div class="header-list">
                  <%= link_to 'ルーム退出', exit_room_path(@room), data: { turbo_method: :delete, turbo_confirm: "退出してよろしいですか？" }, class: "link-btn-header" %>
                </div>
              <% end %>
            </div>
            <div class="delete-list-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
       
    <div class="posts">
      <%= render partial: 'post', collection: @posts %>
    </div>


    <%# 投稿ボタン %>
    <%= link_to(new_room_post_path, class: 'post-btn') do %>
      <button type="button" class="btn btn-outline-primary">
        <div class="post-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
          </svg>
        </div>
      </button>
    <% end %>
  </div>
  <div class="footer-mobile">
    <%= render 'shared/footer'%>
  </div>
</div>