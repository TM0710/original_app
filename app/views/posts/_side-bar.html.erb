<div class="side-bar-header">
  <div class="side-bar-header-upper">
    <%= link_to (root_path), class: "title" do %>
    <h3>MyWedding</h3>
    <% end %>
  </div>
  <hr>
</div>
<div class="rooms">
  <% if user_signed_in? %>
    <div class="rooom-cintents">
      <%= link_to (user_path(current_user.id)), class: 'link-btn' do %>
      <div class="side-category">
        <div class="user-home">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
          </svg>
          Home
        </div>
      </div>
      <% end %>
      <%= link_to(new_room_path, class: 'link-btn') do %>
      <div class="side-category">
        <div class="new-room">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
          </svg>
          New
        </div>
      </div>
      <% end %>
      <div class="side-category" id="room_nav">
        <div class="room-logo">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
            <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
          </svg>
          <span>Room</span>
        </div>
      </div>
        <div class="now-room hidden" id="now_room">
          <% current_user.rooms.each do |room| %>
            <div class="pull-down-lists">
              <%= link_to(room_posts_path(room), class: 'link-btn') do %>
              <div class="list">
                <div class="room-name">
                  <%= room.name %>
                </div>
              </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <div class="form_room">
        <%= form_with(url: search_rooms_path, local: true, method: :get, class: "search-form") do |form| %>
        <div class="form-room_path">
          <div class="col-auto-room">
            <%= form.text_field :room_path, placeholder: "roomパスワードを入力", class: "form-control" %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit "参加", class: "btn btn-outline-secondary" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="side-category" id="user_nav">
      <div class="user-acount" >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
          <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
          <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
        </svg>
        <%= current_user.name %>
      </div>
    </div>
    <div class="pull-down-lists hidden" id="logout">
      <div class="list">
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete}, class: "link-btn" %>
      </div>
    </div>
  <% end %>
</div>