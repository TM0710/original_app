<div class="header-title">
  <h3><%= link_to 'OriginalApp', room_posts_path(@room), class: "root-taitle" %></h3>
</div>

<div class="show-main">
  <div class="card" style="width: 26rem;">
    <%= image_tag @image,class: "card-img-top" %>
    <div class="card-body">
      <div class="card-header-wrap">
        <div class="card-title">No.<%= @image.id %></div>&nbsp;
        <%# お気に入りボタン %>
        <span id="like-btn<%= @image.id %>">
          <%= render partial: "favorites/favorite", locals: { room: @room, post: @post, index: @image_index, image_id: @image_id} %>
        </span>
      </div>
      <p class="card-text">Some quick example text to build on the card title.</p>
      <div class="show_bottom_btn">
        <div class="dl_like_btn">
          <a href="#" class="btn btn-primary">Download</a>
        </div>
        <% if @post.user_id == current_user.id %>
          <%= link_to room_post_path(@room, @post), data: { turbo_method: :delete} do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
              <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>